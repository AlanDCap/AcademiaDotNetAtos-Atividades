@model AtosProjetoFinal.Models.Class

@{
    ViewData["Title"] = "Classe";
}

<h3>Você tem certeza que deseja remover esta classe</h3>
<div>
    <h4>Class</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.className)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.className)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.level1_ability)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.level1_ability)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.level2_ability)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.level2_ability)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.level3_ability)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.level3_ability)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="classID" />
