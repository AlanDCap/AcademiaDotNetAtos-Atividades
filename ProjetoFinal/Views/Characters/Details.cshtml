<!--Equipamentos da personagem-->
<h1>Equipamentos</h1>
<hr />
<!--Tabela que mostra as armas equipadas na personagem-->
<h3>Armas</h3>
<form asp-action="GoToContentCreation" formmethod="post" >
    <button type="submit" asp-controller="Characters" asp-action="EquipChar" name="BtnValue" value="CharWeapons" class="btn btn-primary">Equipar Arma</button>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th class="col-2">
                Nome
            </th>
            <th class="col-2">
                Grupo
            </th>
            <th class="col-2">
                Tipo de Dano
            </th>
            <th class="col-2">
                Alcance
            </th>
            <th class="col-4">
                Descrição
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    @foreach (var weapon in Model.CharWeapon)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelWeapon => weapon.Weapon.weaponName)
        </td>
        <td>
            @Html.DisplayFor(modelWeapon => weapon.Weapon.weaponGroup)
        </td>
        <td>
            @Html.DisplayFor(modelWeapon => weapon.Weapon.weapongDmgType)
        </td>
        <td>
            @Html.DisplayFor(modelWeapon => weapon.Weapon.weaponRange)
        </td>
        <td>
            @Html.DisplayFor(modelWeapon => weapon.Weapon.weaponDescription)
        </td>
    </tr>
    }
</table>

<h3>Armaduras</h3>
<form asp-action="GoToContentCreation" formmethod="post" >
    <button type="submit" asp-controller="Characters" asp-action="EquipChar" name="BtnValue" value="CharArmors" class="btn btn-primary">Equipar Armaduras</button>
</form>
<!--Tabela que mostra as armaduras equipadas no personagem-->
<table class="table table-striped">
    <thead>
        <tr>
            <th class="col-2">
                Nome
            </th>
            <th class="col-2">
                Grupo
            </th>
            <th class="col-2">
                Peso
            </th>
            <th class="col-2">
                Proteção
            </th>
            <th class="col-4">
                Descrição
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    @foreach (var armor in Model.CharArmor)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelArmor => armor.Armor.armorName)
        </td>
        <td>
            @Html.DisplayFor(modelArmor => armor.Armor.armorGroup)
        </td>
        <td>
            @Html.DisplayFor(modelArmor => armor.Armor.armorBulk)
        </td>
        <td>
            @Html.DisplayFor(modelArmor => armor.Armor.armorProtectionValue)
        </td>
        <td>
            @Html.DisplayFor(modelArmor => armor.Armor.armorDescription)
        </td>
    </tr>
    }
</table>
        
<h3>Itens</h3>
<form asp-action="GoToContentCreation" formmethod="post" >
    <button type="submit" asp-controller="Characters" asp-action="EquipChar" name="BtnValue" value="CharItems" class="btn btn-primary">Equipar Itens</button>
</form>
<!--Tabela que mostra os itens equipados no personagem-->
<table class="table table-striped">
    <thead>
        <tr>
            <th class="col-2">
                Nome
            </th>
            <th class="col-2">
                Grupo
            </th>
            <th class="col-2">
                Peso
            </th>
            <th class="col-6">
                Descrição
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    @foreach (var item in Model.CharItem)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem=> item.Item.itemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem=> item.Item.itemGroup)
        </td>
        <td>
            @Html.DisplayFor(modelItem=> item.Item.itemBulk)
        </td>
        <td>
            @Html.DisplayFor(modelItem=> item.Item.itemDescription)
        </td>
    </tr>
    }
</table>

<div>
    <input type="button" class="btn btn-secondary" onclick= "history.go(-1)" value="Voltar" />
</div>
