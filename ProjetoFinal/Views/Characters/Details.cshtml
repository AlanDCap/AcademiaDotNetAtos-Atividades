        </td>
        <td>
            @Html.DisplayFor(model => model.Class.level1_ability)
        </td>
<tr>
        <td>
            @Html.DisplayFor(model => model.Ancestry.trait2)
        </td>
        <td>
            @Html.DisplayFor(model => model.Role.trait2)
        </td>
        <td>
            @Html.DisplayFor(model => model.Class.level2_ability)
        </td>
</tr>
<tr>
        <td>
            @Html.DisplayFor(model => model.Ancestry.trait3)
        </td>
        <td>
            @Html.DisplayFor(model => model.Role.trait3)
        </td>
        <td>
            @Html.DisplayFor(model => model.Class.level3_ability)
