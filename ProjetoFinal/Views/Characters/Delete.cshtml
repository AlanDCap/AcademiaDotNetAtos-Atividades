@model AtosProjetoFinal.Models.Character

@{
    ViewData["Title"] = "Remover";
}

<h1>Você tem certeza que deseja remover este personagem?</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.characterName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.characterName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.expPoints)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.expPoints)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.background)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.background)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="characterID" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <input type="button" class="btn btn-secondary" onclick= "history.go(-1)" value="Voltar" />
    </form>
</div>
